<section>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="holaAdmin">
          <p>
            <span>Hola {{usuario}}</span>
            <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesion
              <i class='bx bxs-log-out-circle bx-md bx-fade-left-hover' style='color: #d64022'></i></a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="tableNove">
  <div class="row">
    <div class="col-12 text-center">
    </div>
    <div class="col-4 text-center">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i class='bx bxs-message-add bx-md bx-fade-right-hover'
          style='color: #d64022'></i> </i> Añadir Novedad </a>
    </div>
  </div>
  <table class="table table-dark table-striped mb-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titulo</th>
        <th scope="col">Descripción</th>
        <th scope="col">Imagen</th>
        <th scope="col">Modificar/Eliminar</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {{#each novedades}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{titulo}}</td>
        <td>{{subtitulo}}</td>
        <td>{{{imagen}}}</td>
        <td class="text-left">
          <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
            <i class='bx bxs-edit-alt'></i></a>
          <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
            <i class='bx bxs-message-alt-x'> </i></a>
        </td>
      </tr>
      {{/each}}

    </tbody>
  </table>
</section>

</div>